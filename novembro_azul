                    <script>
                        // Variáveis para controle do calendário
                        let dataAtual = new Date();
                        let anoAtual = dataAtual.getFullYear();
                        let mesAtual = dataAtual.getMonth();
                        
                        // Nomes dos meses
                        const meses = [
                            'Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho',
                            'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'
                        ];
                        
                        // Dados de exemplo para a agenda
                        const agendamentos = [
                            { data: new Date(2023, 10, 15, 15, 30), paciente: 'João Silva Santos', medico: 'Dr. Roberto Alves', tipo: 'Consulta de Rotina' },
                            { data: new Date(2023, 10, 15, 16, 45), paciente: 'Carlos Alberto Oliveira', medico: 'Dr. Marcelo Silva', tipo: 'Acompanhamento de Exame' },
                            { data: new Date(2023, 10, 18, 9, 15), paciente: 'Pedro Henrique Lima', medico: 'Dr. Roberto Alves', tipo: 'Retorno' },
                            { data: new Date(2023, 10, 20, 14, 0), paciente: 'Marcos Antônio Souza', medico: 'Dr. Marcelo Silva', tipo: 'Consulta de Rotina' },
                            { data: new Date(2023, 10, 22, 10, 30), paciente: 'Ricardo Ferreira', medico: 'Dr. Roberto Alves', tipo: 'Acompanhamento de Exame' },
                            { data: new Date(2023, 10, 25, 11, 0), paciente: 'José Carlos Mendes', medico: 'Dr. Marcelo Silva', tipo: 'Consulta de Rotina' }
                        ];
                        
                        // Função para gerar o calendário
                        function gerarCalendario(ano, mes) {
                            const calendarioGrid = document.getElementById('calendario-grid');
                            const calendarioMes = document.getElementById('calendario-mes');
                            
                            // Atualizar o título do mês
                            calendarioMes.textContent = `${meses[mes]} ${ano}`;
                            
                            // Limpar o calendário
                            calendarioGrid.innerHTML = '';
                            
                            // Adicionar os dias da semana
                            const diasSemana = ['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'];
                            diasSemana.forEach(dia => {
                                const diaElemento = document.createElement('div');
                                diaElemento.className = 'calendario-dia-semana';
                                diaElemento.textContent = dia;
                                calendarioGrid.appendChild(diaElemento);
                            });
                            
                            // Obter o primeiro dia do mês e o último dia do mês
                            const primeiroDia = new Date(ano, mes, 1);
                            const ultimoDia = new Date(ano, mes + 1, 0);
                            const diasNoMes = ultimoDia.getDate();
                            const diaInicial = primeiroDia.getDay();
                            
                            // Adicionar dias vazios no início do mês
                            for (let i = 0; i < diaInicial; i++) {
                                const diaVazio = document.createElement('div');
                                diaVazio.className = 'calendario-dia outro-mes';
                                calendarioGrid.appendChild(diaVazio);
                            }
                            
                            // Adicionar os dias do mês
                            const hoje = new Date();
                            for (let dia = 1; dia <= diasNoMes; dia++) {
                                const diaElemento = document.createElement('div');
                                const dataDia = new Date(ano, mes, dia);
                                
                                // Verificar se é o dia atual
                                if (dataDia.toDateString() === hoje.toDateString()) {
                                    diaElemento.className = 'calendario-dia dia-atual';
                                } else {
                                    diaElemento.className = 'calendario-dia';
                                }
                                
                                // Adicionar o número do dia
                                const diaNumero = document.createElement('div');
                                diaNumero.className = 'dia-numero';
                                diaNumero.textContent = dia;
                                diaElemento.appendChild(diaNumero);
                                
                                // Adicionar agendamentos para este dia
                                const agendamentosDia = agendamentos.filter(ag => 
                                    ag.data.getDate() === dia && 
                                    ag.data.getMonth() === mes && 
                                    ag.data.getFullYear() === ano
                                );
                                
                                if (agendamentosDia.length > 0) {
                                    const agendamentosContainer = document.createElement('div');
                                    agendamentosContainer.className = 'agendamentos-dia';
                                    
                                    agendamentosDia.forEach(ag => {
                                        const agendamentoItem = document.createElement('div');
                                        agendamentoItem.className = 'agendamento-item';
                                        agendamentoItem.textContent = `${ag.data.getHours()}:${ag.data.getMinutes().toString().padStart(2, '0')} - ${ag.paciente.split(' ')[0]}`;
                                        agendamentoItem.title = `${ag.data.getHours()}:${ag.data.getMinutes().toString().padStart(2, '0')} - ${ag.paciente} - ${ag.medico}`;
                                        agendamentosContainer.appendChild(agendamentoItem);
                                    });
                                    
                                    diaElemento.appendChild(agendamentosContainer);
                                }
                                
                                calendarioGrid.appendChild(diaElemento);
                            }
                        }
                        
                        // Função para mudar o mês
                        function mudarMes(direcao) {
                            mesAtual += direcao;
                            
                            if (mesAtual < 0) {
                                mesAtual = 11;
                                anoAtual--;
                            } else if (mesAtual > 11) {
                                mesAtual = 0;
                                anoAtual++;
                            }
                            
                            gerarCalendario(anoAtual, mesAtual);
                        }
                        
                        // Função para filtrar a agenda
                        function filtrarAgenda() {
                            const filtro = document.getElementById('filtro-agenda').value;
                            const pesquisa = document.getElementById('pesquisa-agenda').value.toLowerCase();
                            
                            // Aqui você implementaria a lógica de filtragem real
                            // Por enquanto, vamos apenas mostrar uma mensagem
                            showNotification(`Filtro aplicado: ${filtro}${pesquisa ? ` e pesquisa: "${pesquisa}"` : ''}`, 'success');
                        }
                        
                        // Inicializar o calendário
                        gerarCalendario(anoAtual, mesAtual);
                    </script>

