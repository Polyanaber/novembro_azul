            <script>
                function novoCadastro() {
                    document.getElementById('form-cadastro').reset();
                    showNotification('Novo cadastro iniciado!', 'success');
                }

                function excluirCadastro() {
                    if(confirm('Tem certeza que deseja excluir este cadastro?')) {
                        showNotification('Cadastro excluído com sucesso!', 'success');
                    }
                }

                function abrirFicha() {
                    showNotification('Ficha do paciente aberta!', 'info');
                }

                function imprimirCadastro() {
                    // Coletar dados do formulário
                    const formData = new FormData(document.getElementById('form-cadastro'));
                    const dados = {};
                    for (let [key, value] of formData.entries()) {
                        dados[key] = value;
                    }
                    
                    // Gerar conteúdo para impressão
                    const conteudoImpressao = `
                        <div class="impressao-container">
                            <div class="impressao-header">
                                <h2>Ficha do Paciente - Novembro Azul</h2>
                                <p>Ministério da Saúde</p>
                                <p>Data de emissão: ${new Date().toLocaleDateString('pt-BR')}</p>
                            </div>
                            
                            <div class="impressao-dados">
                                <div class="impressao-grupo">
                                    <h3>Dados Pessoais</h3>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Nome:</span>
                                        <span class="impressao-valor">${dados.nome || 'Não informado'}</span>
                                    </div>
                                    <div class="impressao-item">
                                        <span class="impressao-label">CPF:</span>
                                        <span class="impressao-valor">${dados.cpf || 'Não informado'}</span>
                                    </div>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Estado Civil:</span>
                                        <span class="impressao-valor">${dados.estado_civil || 'Não informado'}</span>
                                    </div>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Nome da Mãe:</span>
                                        <span class="impressao-valor">${dados.nome_mae || 'Não informado'}</span>
                                    </div>
                                </div>
                                
                                <div class="impressao-grupo">
                                    <h3>Dados da Consulta</h3>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Data da Consulta:</span>
                                        <span class="impressao-valor">${dados.data_consulta || 'Não agendada'}</span>
                                    </div>
                                </div>
                                
                                <div class="impressao-grupo">
                                    <h3>Informações Adicionais</h3>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Renda Familiar:</span>
                                        <span class="impressao-valor">R$ ${dados.renda_familiar || '0,00'}</span>
                                    </div>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Tempo de Residência:</span>
                                        <span class="impressao-valor">${dados.tempo_residencia || '0'} anos</span>
                                    </div>
                                    <div class="impressao-item">
                                        <span class="impressao-label">Casa Própria:</span>
                                        <span class="impressao-valor">${dados.casa_propria ? 'Sim' : 'Não'}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="impressao-grupo">
                                <h3>Observações</h3>
                                <p>Este documento foi gerado automaticamente pelo sistema Novembro Azul do Ministério da Saúde.</p>
                            </div>
                        </div>
                    `;
                    
                    // Abrir janela de impressão
                    const janelaImpressao = window.open('', '_blank');
                    janelaImpressao.document.write(`
                        <html>
                            <head>
                                <title>Impressão - Ficha do Paciente</title>
                                <style>
                                    body { font-family: Arial, sans-serif; margin: 20px; }
                                    .impressao-container { max-width: 800px; margin: 0 auto; }
                                    .impressao-header { text-align: center; margin-bottom: 25px; border-bottom: 2px solid #1e3a8a; padding-bottom: 15px; }
                                    .impressao-header h2 { color: #1e3a8a; margin-bottom: 10px; }
                                    .impressao-dados { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 15px; margin-bottom: 25px; }
                                    .impressao-grupo { margin-bottom: 15px; }
                                    .impressao-grupo h3 { color: #1e3a8a; margin-bottom: 8px; font-size: 16px; border-bottom: 1px solid #e2e8f0; padding-bottom: 5px; }
                                    .impressao-item { display: flex; margin-bottom: 5px; }
                                    .impressao-label { font-weight: bold; min-width: 150px; }
                                    .impressao-valor { flex: 1; }
                                    @media print { body { margin: 0; } }
                                </style>
                            </head>
                            <body>
                                ${conteudoImpressao}
                                <script>
                                    window.onload = function() {
                                        window.print();
                                    };
                                <\/script>
                            </body>
                        </html>
                    `);
                    janelaImpressao.document.close();
                }

                function consultarCadastro() {
                    window.location.href = '?pagina=consulta';
                }

                function fecharCadastro() {
                    window.location.href = '?pagina=inicio';
                }

                // Formatação automática do CPF
                document.querySelector('input[name="cpf"]').addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length <= 11) {
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                        e.target.value = value;
                    }
                });

                // Sistema de notificações
                function showNotification(message, type) {
                    const notification = document.createElement('div');
                    notification.className = `mensagem ${type} fade-in`;
                    notification.style.position = 'fixed';
                    notification.style.top = '20px';
                    notification.style.right = '20px';
                    notification.style.zIndex = '1000';
                    notification.style.maxWidth = '300px';
                    notification.innerHTML = `
                        <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation' : 'info'}-circle"></i>
                        ${message}
                    `;
                    
                    document.body.appendChild(notification);
                    
                    setTimeout(() => {
                        notification.remove();
                    }, 4000);
                }

                // Validação de formulário
                document.getElementById('form-cadastro').addEventListener('submit', function(e) {
                    const cpf = document.querySelector('input[name="cpf"]').value;
                    const nome = document.querySelector('input[name="nome"]').value;
                    
                    if (!nome.trim()) {
                        e.preventDefault();
                        showNotification('Por favor, preencha o campo Nome!', 'error');
                        return;
                    }
                    
                    if (cpf.replace(/\D/g, '').length !== 11) {
                        e.preventDefault();
                        showNotification('CPF deve conter 11 dígitos!', 'error');
                        return;
                    }
                });

                // Atalhos de teclado
                document.addEventListener('keydown', function(e) {
                    // F2 - Consultar
                    if (e.key === 'F2' || (e.ctrlKey && e.key === 'f')) {
                        e.preventDefault();
                        consultarCadastro();
                    }
                    // F4 - Gravar
                    if (e.key === 'F4' || (e.ctrlKey && e.key === 's')) {
                        e.preventDefault();
                        document.querySelector('button[type="submit"]').click();
                    }
                    // F5 - Ficha
                    if (e.key === 'F5') {
                        e.preventDefault();
                        abrirFicha();
                    }
                    // F6 - Imprimir
                    if (e.key === 'F6' || (e.ctrlKey && e.key === 'p')) {
                        e.preventDefault();
                        imprimirCadastro();
                    }
                });
            </script>

