            <script>
                function novoAgendamento() {
                    // Limpar formulário
                    const inputs = document.querySelectorAll('.secao-cadastro input, .secao-cadastro select, .secao-cadastro textarea');
                    inputs.forEach(input => {
                        if (input.type === 'checkbox') {
                            input.checked = false;
                        } else {
                            input.value = '';
                        }
                    });
                    showNotification('Novo agendamento iniciado!', 'success');
                }
                
                function agendarConsulta() {
                    // Validar formulário
                    const nome = document.querySelector('.secao-cadastro input[placeholder*="Nome Completo"]').value;
                    const cpf = document.querySelector('.secao-cadastro input[placeholder*="CPF"]').value;
                    const data = document.querySelector('.secao-cadastro input[type="date"]').value;
                    
                    if (!nome || !cpf || !data) {
                        showNotification('Por favor, preencha todos os campos obrigatórios!', 'error');
                        return;
                    }
                    
                    // Simular agendamento
                    showNotification('Consulta agendada com sucesso! Em breve entraremos em contato para confirmação.', 'success');
                    
                    // Redirecionar após 2 segundos
                    setTimeout(() => {
                        window.location.href = '?pagina=inicio';
                    }, 2000);
                }
                
                function consultarAgendamentos() {
                    window.location.href = '?pagina=consulta';
                }
                
                function imprimirAgendamento() {
                    showNotification('Imprimindo comprovante de agendamento...', 'info');
                    // Em um sistema real, aqui abriria a janela de impressão
                }
                
                function fecharAgendamento() {
                    window.location.href = '?pagina=inicio';
                }
                
                // Formatação automática do CPF
                document.querySelector('.secao-cadastro input[placeholder*="CPF"]').addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length <= 11) {
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                        e.target.value = value;
                    }
                });
                
                // Formatação automática do telefone
                document.querySelector('.secao-cadastro input[placeholder*="Telefone"]').addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length <= 11) {
                        if (value.length <= 2) {
                            value = value.replace(/(\d{0,2})/, '($1');
                        } else if (value.length <= 7) {
                            value = value.replace(/(\d{2})(\d{0,5})/, '($1) $2');
                        } else {
                            value = value.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3');
                        }
                        e.target.value = value;
                    }
                });
            </script>

