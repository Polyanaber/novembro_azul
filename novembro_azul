            <script>
                // Função para filtrar pacientes (simulação)
                function filtrarPacientes() {
                    const filtroNome = document.getElementById('filtro-nome').value.toLowerCase();
                    const filtroCpf = document.getElementById('filtro-cpf').value;
                    const filtroData = document.getElementById('filtro-data').value;
                    
                    // Em um sistema real, aqui seria feita uma requisição AJAX para o servidor
                    // Para este exemplo, vamos simular alguns dados
                    const pacientes = [
                        {
                            codigo: 'P20231115001',
                            nome: 'João da Silva',
                            cpf: '123.456.789-00',
                            data_consulta: '2023-11-20',
                            data_cadastro: '2023-11-15 10:30:00'
                        },
                        {
                            codigo: 'P20231116001',
                            nome: 'Pedro Santos',
                            cpf: '987.654.321-00',
                            data_consulta: '2023-11-25',
                            data_cadastro: '2023-11-16 14:20:00'
                        },
                        {
                            codigo: 'P20231117001',
                            nome: 'Carlos Oliveira',
                            cpf: '456.789.123-00',
                            data_consulta: '2023-11-22',
                            data_cadastro: '2023-11-17 09:15:00'
                        }
                    ];
                    
                    // Filtrar pacientes (simulação)
                    const pacientesFiltrados = pacientes.filter(paciente => {
                        const nomeMatch = !filtroNome || paciente.nome.toLowerCase().includes(filtroNome);
                        const cpfMatch = !filtroCpf || paciente.cpf.includes(filtroCpf);
                        const dataMatch = !filtroData || paciente.data_consulta === filtroData;
                        
                        return nomeMatch && cpfMatch && dataMatch;
                    });
                    
                    // Atualizar tabela
                    const tabelaBody = document.getElementById('tabela-resultados');
                    
                    if (pacientesFiltrados.length === 0) {
                        tabelaBody.innerHTML = `
                            <tr>
                                <td colspan="6" style="text-align: center; padding: 20px;">
                                    <i class="fas fa-exclamation-circle" style="color: var(--warning); font-size: 24px; margin-bottom: 10px;"></i>
                                    <p>Nenhum paciente encontrado com os filtros aplicados</p>
                                </td>
                            </tr>
                        `;
                    } else {
                        let html = '';
                        pacientesFiltrados.forEach(paciente => {
                            html += `
                                <tr>
                                    <td>${paciente.codigo}</td>
                                    <td>${paciente.nome}</td>
                                    <td>${paciente.cpf}</td>
                                    <td>${formatarData(paciente.data_consulta)}</td>
                                    <td>${formatarDataHora(paciente.data_cadastro)}</td>
                                    <td>
                                        <div class="acoes-tabela">
                                            <button class="btn-acao editar" onclick="editarPaciente('${paciente.codigo}')">
                                                <i class="fas fa-edit"></i> Editar
                                            </button>
                                            <button class="btn-acao imprimir" onclick="imprimirPaciente('${paciente.codigo}')">
                                                <i class="fas fa-print"></i> Imprimir
                                            </button>
                                            <button class="btn-acao excluir" onclick="excluirPaciente('${paciente.codigo}')">
                                                <i class="fas fa-trash"></i> Excluir
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            `;
                        });
                        tabelaBody.innerHTML = html;
                    }
                }
                
                function limparFiltros() {
                    document.getElementById('filtro-nome').value = '';
                    document.getElementById('filtro-cpf').value = '';
                    document.getElementById('filtro-data').value = '';
                    filtrarPacientes();
                }
                
                function formatarData(data) {
                    if (!data) return 'Não agendada';
                    return new Date(data + 'T00:00:00').toLocaleDateString('pt-BR');
                }
                
                function formatarDataHora(dataHora) {
                    if (!dataHora) return '';
                    return new Date(dataHora.replace(' ', 'T')).toLocaleString('pt-BR');
                }
                
                function editarPaciente(codigo) {
                    showNotification(`Editando paciente ${codigo}...`, 'info');
                    // Em um sistema real, aqui redirecionaria para a página de edição
                }
                
                function imprimirPaciente(codigo) {
                    showNotification(`Imprimindo ficha do paciente ${codigo}...`, 'info');
                    // Em um sistema real, aqui abriria a ficha de impressão do paciente
                    window.open(`?pagina=impressao&codigo=${codigo}`, '_blank');
                }
                
                function excluirPaciente(codigo) {
                    if (confirm(`Tem certeza que deseja excluir o paciente ${codigo}?`)) {
                        showNotification(`Paciente ${codigo} excluído com sucesso!`, 'success');
                        // Em um sistema real, aqui faria uma requisição para excluir do banco
                        filtrarPacientes(); // Recarregar a lista
                    }
                }
                
                // Formatação automática do CPF no filtro
                document.getElementById('filtro-cpf').addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length <= 11) {
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d)/, '$1.$2');
                        value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                        e.target.value = value;
                    }
                });
            </script>

