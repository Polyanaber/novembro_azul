    <script>
        // Sistema do Chatbot
        const chatbotToggle = document.getElementById('chatbot-toggle');
        const chatbotWindow = document.getElementById('chatbot-window');
        const chatbotClose = document.getElementById('chatbot-close');
        const chatbotMessages = document.getElementById('chatbot-messages');
        const chatbotInput = document.getElementById('chatbot-input');
        const chatbotSend = document.getElementById('chatbot-send');
        const quickQuestions = document.querySelectorAll('.quick-question');

        chatbotToggle.addEventListener('click', function() {
            chatbotWindow.style.display = 'flex';
        });

        chatbotClose.addEventListener('click', function() {
            chatbotWindow.style.display = 'none';
        });

        chatbotSend.addEventListener('click', sendMessage);
        chatbotInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        quickQuestions.forEach(question => {
            question.addEventListener('click', function() {
                const questionText = this.getAttribute('data-question');
                addMessage(questionText, 'user');
                processMessage(questionText);
            });
        });

        function sendMessage() {
            const message = chatbotInput.value.trim();
            if (message) {
                addMessage(message, 'user');
                processMessage(message);
                chatbotInput.value = '';
            }
        }

        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.textContent = text;
            chatbotMessages.appendChild(messageDiv);
            chatbotMessages.scrollTop = chatbotMessages.scrollHeight;
        }

        function processMessage(message) {
            // Simulação de respostas do chatbot
            setTimeout(() => {
                let response = '';
                
                if (message.toLowerCase().includes('sintoma')) {
                    response = 'Os sintomas do câncer de próstata podem incluir dificuldade para urinar, diminuição do jato de urina, necessidade de urinar mais vezes (principalmente à noite), sangue na urina ou no sêmen, e dor óssea em casos avançados. É importante consultar um urologista para avaliação adequada.';
                } else if (message.toLowerCase().includes('agendar') || message.toLowerCase().includes('consulta')) {
                    response = 'Para agendar uma consulta, você pode acessar a página "Agendar Consulta" no menu principal, ou entrar em contato com nossa central de atendimento pelo telefone (11) 3333-4444.';
                } else if (message.toLowerCase().includes('exame')) {
                    response = 'Os exames principais para detecção precoce do câncer de próstata são o toque retal e o exame de PSA (Antígeno Prostático Específico). Homens a partir dos 50 anos (ou 45 com fatores de risco) devem realizar esses exames anualmente.';
                } else if (message.toLowerCase().includes('urologista') || message.toLowerCase().includes('especialista')) {
                    response = 'Você pode encontrar um urologista através do sistema público de saúde (SUS) em qualquer Unidade Básica de Saúde, ou através de convênios médicos. Também temos parcerias com hospitais que oferecem atendimento especializado.';
                } else if (message.toLowerCase().includes('prevenção')) {
                    response = 'A prevenção do câncer de próstata inclui manter uma alimentação saudável (rica em frutas, verduras e legumes), praticar atividades físicas regularmente, manter o peso adequado, não fumar e realizar exames periódicos conforme a idade e fatores de risco.';
                } else {
                    response = 'Obrigado pela sua pergunta! Para informações mais específicas sobre câncer de próstata, exames, agendamento de consultas ou localização de especialistas, selecione uma das opções rápidas ou entre em contato conosco pelo telefone 136.';
                }
                
                addMessage(response, 'bot');
            }, 1000);
        }

        // Sistema de notificações
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `mensagem ${type} fade-in`;
            notification.style.position = 'fixed';
            notification.style.top = '20px';
            notification.style.right = '20px';
            notification.style.zIndex = '1000';
            notification.style.maxWidth = '300px';
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check' : type === 'error' ? 'exclamation' : 'info'}-circle"></i>
                ${message}
            `;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 4000);
        }

        // Sistema de lembretes
        document.querySelectorAll('.lembrete-checkbox').forEach(checkbox => {
            checkbox.addEventListener('click', function() {
                this.classList.toggle('checked');
                const titulo = this.parentElement.querySelector('.lembrete-titulo');
                if (this.classList.contains('checked')) {
                    titulo.style.textDecoration = 'line-through';
                    titulo.style.opacity = '0.7';
                    showNotification('Tarefa concluída!', 'success');
                } else {
                    titulo.style.textDecoration = 'none';
                    titulo.style.opacity = '1';
                }
            });
        });
    </script>
</body>
</html>
