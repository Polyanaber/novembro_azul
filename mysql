CREATE DATABASE LOGIN_USUARIOS;
USE LOGIN_USUARIOS;

CREATE TABLE LOGIN(
    nome VARCHAR(100) NOT NULL,
    cpf CHAR(11) PRIMARY KEY,
    email VARCHAR(100),
    telefone VARCHAR(20),
    data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    CONSTRAINT chk_cpf_format CHECK (cpf REGEXP '^[0-9]{11}$')
);

INSERT INTO LOGIN (nome, cpf, email, telefone)
VALUES ('Jo√£o da Silva', '12345678901', 'joao@email.com', '31999999999');

